@using System.Web.Optimization;

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@Page.Title - Sharapist: A Network For Therapy</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @Scripts.Render("~/bundles/jquery", "~/bundles/knockout", "~/bundles/modernizr")
        @Styles.Render("~/bundles/css", "~/bundles/jquery-css")
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content="Social Network for Physical Therapist; Social Network for Occpuational Therapist; Social Network for Personnel Trainers.">
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="~/">
                        <img src="~/Images/Sharapist.PNG" width="300" height="100" alt="logo for Sharapist.com"/></a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @if (WebSecurity.IsAuthenticated) {
                            <text>
                                Hello, <a class="email" href="~/Account/ClientManage" title="Manage">@WebSecurity.CurrentUserName</a>!
                                <form id="logoutForm" action="~/Account/Logout" method="post">
                                    @AntiForgery.GetHtml()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
                                </form>
                            </text>
                        } else {
                            <ul>
                                <li><a href="~/Account/Register">Register</a></li>
                                <li><a href="~/Account/Login">Log in</a></li>
                            </ul>
                        }
                    </section>
                    <nav>
                        <ul id="menu">
                            <li><a href="~/Premium/ClientHome.cshtml">
                        <img src="~/Images/Home.png" title="Home" style="height:30px" />
                    </a></li>

                            <li><a href="~/Premium/ClientPlanHistory.cshtml">
                        <img src="~/Images/CaseStudy.png" title="Plan History" style="height:30px" />
                    </a></li>

                            <li><a href="~/Premium/ClientInbox.cshtml">
                        <img src="~/Images/Chat.png" title="Inbox" style="height:30px" />
                    </a></li>
                            <li><a href="~/MarketPlace/MarketPlace">
                                <img src="~/Images/Cart.png" title="Market Place" style="height:30px" />
                            </a></li>
                            <li><a href="~/About.cshtml">
                        <img src="~/Images/About.png" title="About" style="height:30px" />
                    </a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Sharapist: A Network For Therapy</p>
                </div>
            </div>
        </footer>
        @RenderSection("Scripts", required: false)
    </body>
</html>